{
  "apiVersion": "1",
  "swaggerVersion": "1.2",
  "basePath": "http:\/\/localhost:8081",
  "resourcePath": "\/user",
  "apis": [
    {
      "path": "\/user\/login",
      "description": "Logs a user in",
      "operations": [
        {
          "httpMethod": "POST",
          "summary": "To login.",
          "notes" : "Upon being called, the server sets a login cookie on your browser. Returns just http code 200 on success. On an error, it returns code 400 with an error message in the body.",
          "responseClass": "void",
          "nickname": "login",
          "parameters": [
            {
              "name": "username",
              "description": "username",
              "paramType": "form",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            },
            {
              "name": "password",
              "description": "user password",
              "paramType": "form",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ]
        }
      ]
    },
    {
      "path": "\/user\/register",
      "description": "Registers a user",
      "operations": [
        {
          "httpMethod": "POST",
          "summary": "Registers a user.",
          "notes": "It registers you and then logs you in by setting a cookie. Returns just http code 200 on success. On an error, it returns code 400 with an error message in the body.",
          "responseClass": "void",
          "nickname": "register",
          "parameters": [
            {
              "name": "username",
              "description": "username",
              "paramType": "form",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            },
            {
              "name": "password",
              "description": "user password",
              "paramType": "form",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ]
        }
      ]
    }
  ],
  "models": {
  }
}
