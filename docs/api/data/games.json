{
    "apiVersion": "1",
    "swaggerVersion": "1.2",
    "basePath": "http://localhost:8081",
    "resourcePath": "/games",
    "apis": [
        {
            "path": "/games/list",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Get a list of all games in progress.",
                    "responseClass": "GameList",
                    "nickname": "register",
                    "parameters": []
                }
            ]
        },
        {
            "path": "/games/create",
            "description": "Creates a game",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Creates a game. Returns a game JSON stub.",
                    "responseClass": "String",
                    "nickname": "login",
                    "parameters": [
                        {
                            "name": "randomTiles",
                            "description": "whether the tiles should be randomly placed",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "boolean"
                        },
                        {
                            "name": "randomNumbers",
                            "description": "whether the numbers should be randomly placed",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "boolean"
                        },
                        {
                            "name": "randomPorts",
                            "description": "whether the port should be randomly placed",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "boolean"
                        },
                        {
                            "name": "name",
                            "description": "The name of the game",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/games/join",
            "operations": [
                {
                    "httpMethod": "POST",
                    "summary": "Join or re-join a game (set's your game cookie)",
					"notes":"This method will work on games that a) are empty OR b) you are already in (rejoining). It set's your cookie so your client knows which game it's in. It also adds to or updates you in the player list on the server for that game (in the model)",
                    "responseClass": "void",
                    "nickname": "join",
                    "parameters": [
                        {
                            "name": "color",
                            "description": "What color you want to join (or rejoin) as.",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "String",
                            "allowableValues": {
                                "values": [
                                    "red",
                                    "green",
                                    "blue",
                                    "yellow",
                                    "puce",
                                    "brown",
                                    "white",
                                    "purple",
                                    "orange"
                                ],
                                "valueType": "array"
                            }
                        },
                        {
                            "name": "id",
                            "description": "The id of the game to join",
                            "paramType": "form",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "integer"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
      "Player": {
            "id": "Player",
            "description": "A stub for player representation",
            "required": [
                "color",
                "name",
                "id"
            ],
            "properties": {
                "color": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "id": {
                    "type": "integer",
                    "format": "int64"
                }
            }
        },
        "Game": {
            "id": "Game",
            "description": "A stub for game representation",
            "required": [
                "id",
                "title"
            ],
            "properties": {
                "title": {
                    "type": "string"
                },
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "players": {
                    "type": "array",
                    "items": {
                        "$ref": "Player"
                    }
                }
            }
        }
    }
}
